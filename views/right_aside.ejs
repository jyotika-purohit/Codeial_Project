<link rel="stylesheet" href="/css/right_aside.css">
    <div style="padding: 10px;">
        <h3>My Friends</h3>
        <%if(locals.user) { %>
            <% for(friend of currUser.friends) {  %>   
                <h3><a href="/users/profile-info/<%= friend._id %>"> <%= friend.name %></a></h3>
            <% } %>
        <% } %>
    </div>
    <hr>
    <div class="right_aside-container">
        <h3>All Users</h3>
        <ul class="users-list">
            <% for(user of allUsers) { %> 
                <li><a href="/users/profile-info/<%= user._id %>"><h4><%= user.name %></h4></a></li>
            <% } %>
        </ul>

        
    </div>

