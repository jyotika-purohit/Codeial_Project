<div id="posts-container" style="border: 3px solid violet;margin: 20px;">
    <ul>
        <% for(post of posts) { %> 

            <li class="post">
                <p style="display: inline-block;"><%= post.content %></p>
                <p style="display: inline-block;font-weight: bolder;"><%= post.user.name %></p>
            </li>
            
        <% } %>
    </ul>


</div>
